" Editing settings
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab

" Encoding
set encoding=utf-8

" Backups
set nobackup
set nowritebackup
set noswapfile

" Show whitespace
set list listchars=tab:→\ ,space:·

" Use system clipboard
set clipboard=unnamedplus

" Setup pathogen
execute pathogen#infect()
